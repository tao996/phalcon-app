<?xml version="1.0" encoding="UTF-8"?>

<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="phpunit-autoload.php"
         colors="true"
         cacheResult ="false"
>
    <testsuites>
        <testsuite name="phax">
            <directory suffix="Test.php">tao996/phalcon</directory>
        </testsuite>
        <testsuite name="app">
            <directory suffix="Test.php">app/Http/</directory>
            <directory suffix="Test.php">app/Modules/Demo</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing"/>
    </php>

</phpunit>